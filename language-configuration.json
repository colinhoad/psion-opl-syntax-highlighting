{
    "comments": {
        // symbol used for single line comment
        "lineComment": "rem",
    },
    // symbols used as brackets
    "brackets": [
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    // governs behaviour after Enter is pressed
    "onEnterRules": [
        {
            "beforeText": "\\b^PROC \\b.*(:\\s*|\\)\\s*)$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "\\b^proc \\b.*(:\\s*|\\)\\s*)$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(if |\\s*if ).*$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(IF |\\s*IF ).*$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(do|do |\\s*do|\\s*do ).*$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(DO|DO |\\s*DO|\\s*DO ).*$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(while |\\s*while ).*$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(WHILE |\\s*WHILE ).*$",
            "action": {"indent": "indent"}
        },
        {
            "beforeText": "^(\\s*ENDP|\\s*ENDP\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*endp|\\s*endp\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*ENDWH|\\s*ENDWH\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*endwh|\\s*endwh\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*UNTIL|\\s*UNTIL\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*until|\\s*until\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*ENDIF|\\s*ENDIF\\s*)$",
            "action": {"indent": "outdent"}
        },
        {
            "beforeText": "^(\\s*endif|\\s*endif\\s*)$",
            "action": {"indent": "outdent"}
        }
    ]
}