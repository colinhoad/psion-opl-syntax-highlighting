{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OPL",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#entities"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.opl",
					"match": "(PROC|ENDP)"
				},
				{
					"name": "keyword.operator.opl",
					"match": "(=|\\+|-|\\/|\\*|\\**)"
				},
				{
					"name": "keyword.other.opl",
					"match": "(PRINT|GET)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.opl",
					"match": "([0-9]+)"
				}
			]			
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.rem.opl",
					"match": "REM.*$"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.opl",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.opl",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"match": "(PROC)([a-zA-Z]\\w*)\\(",
					"captures": {
						"1": {
							"name": "keyword.other.opl"
						},
						"2": {
							"name": "entity.name.function.opl"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.opl"
}